<div id="wrapper">
  <p><%= notice %></p>
  <h1>投稿一覧</h1>
  <table>
    <tr>
      <th>投稿者</th>
      <th>画像</th>
      <th>内容</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td class="content"><%= post.user.name %></td>
      <td class="content"><%= image_tag post.image.url %></td>
      <td class="content"><%= post.content %></td>
      <td><%= link_to'詳細',post_path(post.id) %></td>
      <td><%= link_to'編集',edit_post_path(post.id) %></td>
      <td><%= link_to'削除',post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
  </table>
  <br>
  <%= link_to'新しく投稿',new_post_path %>
</div>
