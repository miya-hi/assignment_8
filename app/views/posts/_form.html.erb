<div id="wrapper">
  <%= form_with(model: @post, local: true, url: choose_new_or_edit ) do |form| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= @post.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <div class="new_post"><%= form.label :画像 %></div>
      <%= image_tag(@post.image.url) if @post.image && @post.image.url %>
      <%= form.file_field :image %>
      <%= form.hidden_field :image_cache %>
      <div class="new_post">
      <%= form.label :内容 %>
      <%= form.text_area :content %>
      </div>
    </div>
    <br>
    <%= form.submit "シェア" %>
  <% end %>
  <br>
  <div class="button"><%= link_to "ホーム", posts_path %></div>
</div>
