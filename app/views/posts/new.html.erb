<div id="wrapper">
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: @post, local: true, url: confirm_posts_path) do |form| %>
  <div class="field">
    <div class="new_post"><%= form.label :画像 %></div>
    <%= form.file_field :image %>
  </div>
  <br>
  <%= form.submit "シェア" %>
  <% end %>
  <br>
  <div class="button"><%= link_to "ホーム", posts_path %></div>
</div>
