<!DOCTYPE html>
<html>
  <head>
    <title>InstaClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="container">
    <% if logged_in? %>
    <div class="link">
      <div><%= link_to "プロフィール", user_path(current_user.id) %></div>
      <div><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></div>
        </div>
    <% else %>
    <div class="link">
      <div><%= link_to "ユーザー登録", new_user_path %></div>
      <div><%= link_to "ログイン", new_session_path %></div>
      </div>
    <% end %>
    <%= yield %>
    </div>
  </body>
</html>
