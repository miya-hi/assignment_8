<h1>Sign up</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :名前 %>
  <%= f.text_field :name %>
  <%= f.label :Email %>
  <%= f.email_field :email %>
  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  <%= f.label :パスワード確認 %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "アカウント作成" %>
<% end %>
